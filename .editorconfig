# Универсальные настройки редактора
#
# https://habrahabr.ru/post/220131/
# Скачать плагин: http://editorconfig.org/#download
# Sublime Text: https://packagecontrol.io/packages/EditorConfig
# Atom: https://github.com/sindresorhus/atom-editorconfig

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{rb,php}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
